<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cbecfa"
    tools:context="com.example.jibba_000.recycleforum.CreatePostActivity">

    <ImageView
        android:id="@+id/billedIV1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/tomtbillede"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/billedIV2"
        android:layout_toStartOf="@+id/billedIV2"
        android:layout_marginTop="32dp" />
    <ImageView
        android:id="@+id/billedIV2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/tomtbillede"
        android:layout_marginRight="70dp"
        android:layout_marginEnd="70dp"
        android:layout_alignTop="@+id/billedIV1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/billedeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TilfÃ¸j Billede"
        android:layout_below="@+id/billedIV1"
        android:layout_alignRight="@+id/billedIV2"
        android:layout_alignEnd="@+id/billedIV2"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:background="#009688"/>

    <EditText
        android:id="@+id/editTopic1"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="Emne"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/editDescription1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:inputType="textMultiLine"
        android:hint="Beskrivelse"
        tools:maxLines="10"
        android:layout_below="@+id/editTopic1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <Button
        android:id="@+id/createPostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opret opslag"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/white"
        android:background="#009688"/>
</RelativeLayout>
